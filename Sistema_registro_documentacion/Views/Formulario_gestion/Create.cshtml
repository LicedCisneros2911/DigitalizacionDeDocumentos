@model Sistema_registro_documentacion.Models.Formulario_gestion

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<h4>Formulario_gestion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nombre_gestion" class="control-label"></label>
                <input asp-for="nombre_gestion" class="form-control" />
                <span asp-validation-for="nombre_gestion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
<script>
    window.onload = function () {
        var v = '@ViewBag.msg';
        var msg = v;
        if (msg != null && msg != "") {
            if (msg == "Exito") {
                $('#myModalSuccess').modal('show');
            }
            else {
                $('#myModalError').modal('show');
            }
        }
    }
</script>