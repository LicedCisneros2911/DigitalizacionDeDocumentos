@model IEnumerable<Sistema_registro_documentacion.Models.Formulario_folder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Agregar</a>
</p>
<table id="tableDocumento" style="overflow-x: auto;" class="table table-striped  table-bordered dt-responsive nowrap" cellspacing="0">
    <thead style="background-color:black; color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nombre_folder)
            </th>
            <th style="width:260px;">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nombre_folder)
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.id"><i class="bi bi-pencil-square"></i></a>
                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.id"><i class="bi bi-file-earmark-text-fill"></i></a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.id"><i class="bi bi-trash-fill"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
