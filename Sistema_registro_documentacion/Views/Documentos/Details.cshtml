<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.formulario_Tipo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.formulario_Tipo.nombre_tipo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.formulario_Folder)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.formulario_Folder.nombre_folder)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.titulo)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.cite)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.cite)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.de)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.de)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.via)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.via)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.a)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.a)
