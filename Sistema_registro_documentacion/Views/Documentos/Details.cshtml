        {
            <dt class="col-sm-2">
                @Html.ActionLink("Ver Documento", "ShowPDF", "Documentos", new { id = @Model.id })
            </dt>
        }
        else
        {
            <dd class="col-sm-10">
               No tiene documento:(
            </dd>
        }
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.id">Editar</a> |
    <a asp-action="Index">Volver</a>
</div>
